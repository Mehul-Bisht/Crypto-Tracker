<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="48dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        />

    <TextView
        android:id="@+id/price_usd"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price"
        />

    <TextView
        android:id="@+id/volume"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/volume_day"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/volume"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/change_hour"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/price_usd"
        />

    <TextView
        android:id="@+id/change_hour_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_hour"
        />

    <TextView
        android:id="@+id/change_day"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="#DADADA"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/change_hour"
        app:layout_constraintEnd_toStartOf="@id/change_week"
        app:layout_constraintTop_toTopOf="@id/change_hour"
        />

    <TextView
        android:id="@+id/change_day_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/change_day"
        app:layout_constraintTop_toBottomOf="@id/change_day"
        />

    <TextView
        android:id="@+id/change_week"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/change_day"
        />

    <TextView
        android:id="@+id/change_week_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="#DADADA"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/change_week"
        app:layout_constraintTop_toBottomOf="@id/change_week"
        />

</androidx.constraintlayout.widget.ConstraintLayout>